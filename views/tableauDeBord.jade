extends layout

block content
  section(class="test")
    h2 Début d'un test rapide
    p Le test rapide vous permet de vous préparer avant votre examen officiel.
    a(href="/testRapide" class="bouton") Test Rapide
  
  section(class="examen")
    h2 Début d'un examen officiel

    if error == true
      div(class="alert alert-danger alert-dismissible" role="alert")
        button(type="button" class="close" data-dismiss="alert")
          span(aria-hidden="true") &times;
          span(class="sr-only") Close
        strong Warning ! 
        div(class="msgErreur")=message


    form(method="post")
      p Choisissez le domaine des questions :
      //
        boucle pour les afficher les domaines
      for domaine in domaines
        div(class="checkbox") 
          label
            input(type="checkbox" value="#{domaine.id}") 
            | #{domaine.nom}
      //
        nombre de questions
      p Choisissez le nombre de questions :
      input(type="number" min="1" max="10" value="1" name="nbQuestions")
      input(type="submit" value="Examen officiel" id="monSubmit" class="bouton")
      