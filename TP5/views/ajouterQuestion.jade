extends layout

block stylesheet
    link(rel="stylesheet", href="/stylesheets/ajouterQuestion.css")
    link(rel="stylesheet", href="/stylesheets/globale.css")

    script(type="text/javascript" src="/javascripts/ajouterQuestion.js")
    
block content
    section(class="center")
      h1 Ajouter une question
      form(action="/ajouterToutesQuestions" method="post")
        section
          h2 Domaine
          // Input type text in comments to test select input 
          //input(type="text" id="selectedDomain" placeholder="HTML, CSS ou JavaScript" name="domain" size="63" required) 
          select 
            option(value="HTML") HTML
            option(value="CSS") CSS
            option(value="JavaScript") JavaScript
        section
          h2 Question
          input(type="text" placeholder="Entrez la question" name="question" size="63" required)
        section
          h2 Réponses
          div(class="allReponses")
            - var n = 1
            while n < 4
              div
                input(type="text" class="listeReponses" placeholder="Réponse no. #{n++}" name="answers" size="63" required)
              //input(type="radio" name="correctAnswer")
          a(href="#" class="ajouterReponse") Ajouter une réponse
          
        section
          h2 No. de la bonne réponse
          input(type="number" min="1" max="3" id="chooseAnswer" placeholder="No. de la bonne réponse" name="correctAnswer" required)

        input(type="submit" value="Ajouter la question" class="button")
          
